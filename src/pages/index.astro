---
import Logo from "../components/logo.astro";
import Layout from "../layouts/baselayout.astro";
---

<Layout>
	<Logo />
	<p class="text-center max-w-md hidden mx-auto mt-2 text-slate-600">
		Take control of your goals. Track calories, break down ingredients, and log
		activities with MyFitnessPal.
	</p>
	<h1 class="font-black max-w-md mx-auto text-3xl text-center mt-8">
		Letâ€™s customize MyFitnessPal for your goals.
	</h1>
	<!-- <p class="text-center mt-2">First, select</p> -->
	<div class="flex gap-4 mt-8 text-center font-medium text-xl">
		<a
			href="input"
			class="border bg-slate-50 hover:scale-105 group duration-200 hover:bg-blue-500 hover:text-white hover:border-blue-200 transition border-slate-200 p-6 hover:border-none rounded-lg flex-1 justify-between inline-flex gap-4 flex-col"
		>
			<img src="boy.png" alt="" class="h-20 mt-4 mx-auto" />
			<span>Male</span>
		</a>
		<a
			href="input-w"
			class="border bg-slate-50 hover:scale-105 group duration-200 hover:bg-blue-500 hover:text-white hover:border-blue-200 transition border-slate-200 p-6 hover:border-none rounded-lg flex-1 justify-between inline-flex gap-4 flex-col"
		>
			<img src="woman.png" alt="" class="h-28 mx-auto" />
			<span>Female</span>
		</a>
	</div>
</Layout>
